#include<stdio.h>
int main()
{
    int n,ecount=0,ocount=0,r;
    printf("enter a number");
    scanf("%d",&n);
    while(n!=0)
    {
        r=n%10;
        if(r%2==0)
        {
            ecount++;
        }
        else
        {
            ocount++;
        }
        n=n/10;
    }
    if(ecount==ocount)
    {
        printf("Fancy number");
    }
    else
    {
        printf("Not fancy number");
    }
}
------------------------------------------------------
OUTPUT:
enter a number 123456
Fancy number
enter a number 12345
Not a fancy number
